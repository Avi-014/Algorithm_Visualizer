<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Algorithm_Visualizer" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#343541</item>
        <item name="colorPrimaryDark">#343541</item>
        <item name="colorAccent">#343541</item>

        <!-- status bar color. -->
        <item name="android:statusBarColor" >#343541</item>

        <!-- Customize your theme here. -->
    </style>

    <style name="Dialog">
        <item name="android:windowBackground">
            @drawable/empty_bg</item>
        <item name="windowNoTitle">true</item>
        <item name="windowFixedWidthMajor">80pt</item>
        <item name="android:windowAnimationStyle">@style/Animate</item>
    </style>

    <style name="Animate">
        <item name="android:windowEnterAnimation">@anim/slide_scale_in</item>
        <item name="android:windowExitAnimation">@anim/slide_scale_out</item>
    </style>

    <style name="CustomProgressBar" parent="@android:style/Widget.ProgressBar">
        <item name="android:progressDrawable">@drawable/custom_progress_bar</item>
    </style>

    <style name="ThreeDotsProgressBar" parent="@android:style/Widget.ProgressBar.Small">
        <item name="android:indeterminateDrawable">@drawable/three_dots_progress</item>
    </style>

</resources>